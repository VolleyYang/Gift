<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroud"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/fragment_list"
            android:textSize="@dimen/classify_fifteenSize"
            android:layout_marginLeft="@dimen/item_sift_banner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginLeft="@dimen/list_oneHuanderForty"
            android:layout_gravity="center"
            android:src="@mipmap/ic_action_compact_share"
            android:layout_width="@dimen/item_sift_fifteen"
            android:layout_height="@dimen/item_sift_fifteen" />
    </LinearLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/list_tb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <android.support.v4.view.ViewPager
        android:id="@+id/list_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>