<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_sift"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/item_sift_one"
    tools:context="activity.siftactivity.SiftActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginTop="@dimen/item_sift_five"
            android:layout_marginLeft="@dimen/classify_ten"
            android:src="@mipmap/btn_back_black"
            android:layout_width="@dimen/fourteen"
            android:layout_height="@dimen/fourteen" />

        <TextView
            android:text="你的礼物"
            android:layout_marginLeft="@dimen/oneHuanderThree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:id="@+id/sift_aty_img"
            android:layout_marginTop="@dimen/item_sift_five"
            android:layout_marginLeft="@dimen/oneHuanderThree"
            android:src="@mipmap/ic_action_compact_share"
            android:layout_width="@dimen/fourteen"
            android:layout_height="@dimen/fourteen" />
    </LinearLayout>
    <ListView
        android:id="@+id/sift_second_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>
