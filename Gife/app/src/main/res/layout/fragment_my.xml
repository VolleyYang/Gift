<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_marginLeft="285dp"
            android:id="@+id/icon_scan"
            android:layout_gravity="right"
            android:src="@mipmap/icon_scan_black"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_marginLeft="20dp"
            android:layout_gravity="center"
            android:src="@mipmap/icon_settings_black"
            android:layout_width="23dp"
            android:layout_height="23dp" />
    </LinearLayout>
    <ImageView
        android:src="@mipmap/me_avatar_boy"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="未登录"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:src="@mipmap/icon_cellphone"
            android:layout_marginLeft="35dp"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <TextView
            android:text="+86"
            android:layout_marginLeft="13dp"
            android:gravity="center"
            android:layout_width="30dp"
            android:layout_height="30dp" />
        <ImageView
            android:src="@mipmap/icon_btn_arrow_down"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:hint="输入手机号"
            android:background="@null"
            android:textSize="15sp"
            android:layout_marginLeft="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_marginLeft="90dp"-->
        <!--android:layout_marginRight="45dp"-->
        <!--android:layout_height="@dimen/item_sift_zeroThree"-->
        <!--android:layout_marginTop="@dimen/item_sift_fifteen"-->
        android:background="@color/item_sift_three" />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_gravity="center"
            android:src="@mipmap/icon_bind_message"
            android:layout_marginLeft="40dp"
            android:layout_width="20dp"
            android:layout_height="20dp" />
        <EditText
            android:hint="短信验证码"
            android:background="@null"
            android:textSize="15sp"
            android:layout_gravity="center"
            android:layout_marginLeft="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <Button
            android:textSize="15sp"
            android:background="#88f7f1f7"
            android:text="获取验证码"
            android:layout_gravity="center"
            android:layout_marginLeft="85dp"
            android:layout_width="wrap_content"
            android:layout_height="20dp" />

    </LinearLayout>
    <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_marginLeft="90dp"-->
        <!--android:layout_marginRight="45dp"-->
        <!--android:layout_height="@dimen/item_sift_zeroThree"-->
        <!--android:layout_marginTop="@dimen/item_sift_fifteen"-->
        <!--android:background="@color/item_sift_three" />-->
    <Button
        android:text="登入"
        android:background="#88f7f1f7"
        android:layout_marginTop="35dp"
        android:layout_gravity="center"
        android:layout_width="280dp"
        android:layout_height="30dp" />
    <TextView
        android:text="使用密码登录"
        android:textColor="#e71010"
        android:textSize="15sp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="235dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:text="使用社交账号登录"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:src="@mipmap/icon_share_sina"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <ImageView
            android:src="@mipmap/icon_share_wechat_timeline"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:src="@mipmap/icon_share_qq"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>