<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="270dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/six"
            app:cardCornerRadius="@dimen/nine"
            app:cardElevation="@dimen/classify_ten"
            >
        <ImageView
            android:id="@+id/stra_head_one_pic"
            android:layout_width="130dp"
            android:layout_height="@dimen/senventyFive"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />

        </android.support.v7.widget.CardView>
        <LinearLayout
            android:layout_marginLeft="@dimen/classify_ten"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/stra_head_one_dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/item_sift_fifteen"
                 />

            <TextView
                android:id="@+id/stra_head_one_author"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/classify_ten"
                 />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>