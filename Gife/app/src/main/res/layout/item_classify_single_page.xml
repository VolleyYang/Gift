<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/item_sift_one"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/single_page_pic"
        android:src="@mipmap/ic_launcher"
        android:layout_width="200dp"
        android:layout_height="150dp" />
    <TextView
        android:layout_below="@id/single_page_pic"
        android:id="@+id/single_page_dp"
        android:layout_marginLeft="15dp"
        android:textSize="13sp"
        android:text="Jawbone/卓帮.UP3蓝牙智能健康运动手环"
        android:layout_width="wrap_content"
        android:layout_height="40dp" />
    <TextView
        android:id="@+id/rmb"
        android:layout_below="@id/single_page_dp"
        android:layout_marginLeft="15dp"
        android:text="¥"
        android:textColor="@color/colorIsCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/single_page_price"
        android:layout_below="@id/single_page_dp"
        android:layout_toRightOf="@id/rmb"
        android:layout_marginLeft="10dp"
        android:text="234"
        android:textColor="@color/colorIsCheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>